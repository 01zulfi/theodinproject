<div class="card-main">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'auth-form' }) do |form| %>

    <div class="auth-form__section">
      <span class="fa fa-user auth-form__icon"></span>
      <%= form.text_field :username, label: false, required: true, placeholder: 'Username', class: 'auth-form__element' %>
    </div>

    <div class="auth-form__section">
      <span class="fa fa-envelope auth-form__icon"></span>
      <%= form.email_field :email, label: false, required: true, placeholder: 'Email', class: 'auth-form__element login email'%>
    </div>

    <div class="auth-form__section">
      <span class="fa fa-lock auth-form__icon"></span>
      <%= form.password_field :password, required: true, label: false, placeholder: 'Password', class: 'auth-form__element login password' %>
    </div>

    <div class="auth-form__section">
      <span class="fa fa-lock auth-form__icon"></span>
      <%= form.password_field :password_confirmation, required: true, label: false, placeholder: 'Password Confirmation', class: 'auth-form__element login password' %>
    </div>

    <div class="auth-form__section">
      <%= link_to 'By signing up, you agree to our terms of use.', terms_of_use_path, class: 'auth-form__link' %>
    </div>

    <div class="auth-form__button-section">
      <%= form.submit 'Sign up', class: 'button button--primary full-width' %>
    </div>
  <% end %>

  <div class="auth-form-divider text-center">
    <span class="auth-form-divider__text">OR SIGN UP WITH</span>
  </div>

  <%= render 'shared/omniauth_buttons' %>
</div>
