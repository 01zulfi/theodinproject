<div class="settings-section">
  <h2 class="accent settings-section__heading">Password</h2>
  <div class="settings-card card-main">

    <div class="settings-card__edit-button settings-card__edit-button--open"></div>

    <div class="settings-view">
      <p class="form__label">Password</p>
      <p class="form__element--non-editable">*******</p>
    </div>

    <%= form_for @user, html: { class: "form settings-view--hidden" }, remote: true do |form| %>

      <div class="form__section">
        <%= form.label :current_password, class: 'form__label' %>
        <%= form.password_field :current_password, placeholder: 'Current Password', class: 'form__element' %>
      </div>

    <div class="form__section">
      <%= form.label :password, class: 'form__label' %>
      <%= form.password_field :password, placeholder: 'New Password', class: 'form__element' %>
    </div>

    <div class="form__section">
      <%= form.label :password_confirmation, class: 'form__label' %>
      <%= form.password_field :password_confirmation, placeholder: 'Confirm New Password', class: 'form__element' %>
    </div>

    <%= form.submit "Update", class: "button button--primary" %>
    <% end %>
  </div>
</div>
