<div class="gradient">
  <div class="container push-container-down">
    <h1 class="text-center accent">Forgot your password?</h1>
    <div class='col-lg-8 offset-lg-2'>

      <div class="card-main">
        <p class="explanation">Enter your email and we'll send you password reset instructions</p>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |form| %>

          <div class="form__section">
            <%= form.email_field :email, autofocus: true, placeholder: "Email", required: true, class: 'form__element'  %>
          </div>

          <%= form.submit "Send reset instructions", class: "button button--primary full-width push-down" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
