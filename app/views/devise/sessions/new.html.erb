<div id="devise-form" class="devise-sign-in gradient">

  <div class="container">
    <h1 class="text-center">Log in</h1>
    <div class="card">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" } ) do |f| %>
        <div class="form-inputs">
          <div class="input-group">
            <div class="logo fa fa-envelope envelope"></div>
            <%= f.input :email, label: false, required: false, autofocus: true, placeholder: "Email Address", input_html: { class: 'login email' }%>
          </div>
          <div class="input-group">
            <div class="logo fa fa-lock lock"></div>
            <%= f.input :password, label: false, required: false, placeholder:  "Password", input_html: { class: 'login password' } %>
          </div>
        </div>
        <!-- From devise /shared/_links.erb -->
        <%= link_to "Forgot your password?", new_password_path( resource_name), class: "forgot-password" %>

        <%= f.input :remember_me, as: :boolean, label: false, inline_label: true, checked: true %>

        <%= f.button :submit, "Login", class: "sign-in-button page-buttons login" %>
      <% end %>

      <div class="in-between text-center"><span>OR</span></div>
      
      <%= render partial: "shared/github_button", locals: {button_type: "Login"} %>
      <%# render "devise/shared/links" %>
    </div>
    <h4 class="not-signed-up text-center">Haven't signed up yet?</h4>
    <%= link_to "Create new account", new_registration_path(resource_name), class: "sign-up-button text-center" %>
  </div>
</div>

